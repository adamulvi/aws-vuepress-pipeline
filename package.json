{
  "name": "aws-vuepress-pipeline",
  "version": "1.0.0",
  "description": "Sample project to create an AWS CodePipeline pipeline to deploy a static VuePress website.",
  "main": "index.js",
  "scripts": {
    "dev": "vuepress dev docs",
    "build": "vuepress build docs",
    "test": "npm run test:unit",
    "lint": "vue-cli-service lint",
    "test:unit": "jest",
    "serve": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris271/aws-vuepress-pipeline.git"
  },
  "keywords": [
    "vuejs",
    "vuepress",
    "documentation",
    "static-site-gen",
    "aws",
    "code-pipeline"
  ],
  "author": "Christopher Butler <christopher.butler007@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chris271/aws-vuepress-pipeline/issues"
  },
  "homepage": "https://github.com/chris271/aws-vuepress-pipeline#readme",
  "dependencies": {
    "global": "^4.4.0",
    "vuepress": "^1.5.1",
    "core-js": "^3.6.4",
    "vue": "^2.6.11",
    "vue-class-component": "7.2.3",
    "vue-property-decorator": "8.4.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-typescript": "^3.0.0-rc.9",
    "@vue/cli-service": "^4.3.1",
    "@vue/test-utils": "^1.0.0-beta.32",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^25.2.6",
    "ts-jest": "^25.2.1",
    "typescript": "3.5.3",
    "vue-jest": "^3.0.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!vue-custom-datepicker)"
    ],
    "testURL": "http://localhost/"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
